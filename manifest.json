{
  "manifest_version": 2,

  "name": "One-click Aveece",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions": [
    "http://*/*","https://*/*", "tabs", "https://aveece.com/items/new?/*"
  ],
  "homepage_url" : "https://aveece.com/items/",
  "content_scripts": [
   {
       "matches": ["http://*/*","https://*/*","https://aveece.com/items/new?/*"],
       "js": ["jquery.js", "popup.js","cookies.js"]
   }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self' 'unsafe-eval'"
}